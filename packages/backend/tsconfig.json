{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts",
  ]
}
