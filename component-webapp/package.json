    "cafy": "^12.0.0",
    "cpx": "^1.5.0",
    "express": "^4.16.4",
    "frost-component": "0.0.x"
  },
  "devDependencies": {
    "typescript": "^3.2.2",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
